<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ahsanullah University of Science and Technology"
        android:textSize="25dp"
        android:textColor="@color/colorGreen"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/aboutButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="25dp"
        />

    <Button
        android:id="@+id/departmentsButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Departments"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="25dp"
        />

    <Button
        android:id="@+id/AdmissionButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admission Procedure"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="25dp"
        />

    <Button
        android:id="@+id/tuitionButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tuition and Fees"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="25dp"
        />

</LinearLayout>